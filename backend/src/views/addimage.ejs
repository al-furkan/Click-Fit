  <!--==================== Register Form====================-->
  <section id="form" class="form section-1">
    <div class="container">
        <h1>Image Upload</h1>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <div class="imges-container">
                <label for="image">Drag & Drop:</label>
                <input type="file" id="image" name="image" accept="img/*">
            </div>
            <button type="submit"  class="btn btn-primary">Upload Image</button>
        </form>
        <h2>Uploaded Images:</h2>
        <div id="imageContainer">
            <% images.forEach(image => { %>
                <img src="/img/<%= image.filename %>" alt="<%= image.filename %>" style="max-width: 200px; margin: 10px;">
            <% }); %>
            </div>
  </div>
  </section>

  
