<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Click Fit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        /* Add your custom styles here */
    </style>
</head>
<body>

    <div class="container">
        <h1 class="mt-4">Click Fit</h1>

        <!-- Animation or Fitness Content -->
        <div id="fitnessContent" class="mt-4">
            <!-- Content will be loaded here dynamically -->
        </div>

        <!-- Drag and Drop Image Upload -->
        <div class="mt-4" id="imageUploadArea">
            <label for="fileInput">Drag & Drop or Click to Upload Image</label>
            <input type="file" id="fileInput" accept="image/*" style="display: none;">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Fetch fitness content using AJAX
            $.ajax({
                url: 'http://numbersapi.com/1/30/date?json',
                method: 'GET',
                success: function (data) {
                    $('#fitnessContent').html('<p>' + data.text + '</p>');
                    // Add the content to some area in the page if needed
                },
                error: function (error) {
                    console.error('Error fetching fitness content:', error);
                }
            });

            // Drag and Drop Image Upload
            $('#imageUploadArea').on('dragover', function (e) {
                e.preventDefault();
                $(this).addClass('dragover');
            });

            $('#imageUploadArea').on('dragleave', function () {
                $(this).removeClass('dragover');
            });

            $('#imageUploadArea').on('drop', function (e) {
                e.preventDefault();
                $(this).removeClass('dragover');
                handleImageUpload(e.originalEvent.dataTransfer.files[0]);
            });

            $('#fileInput').on('change', function () {
                handleImageUpload(this.files[0]);
            });

            function handleImageUpload(file) {
                if (file) {
                    var formData = new FormData();
                    formData.append('image', file);

                    // Use jQuery AJAX to upload the image
                    $.ajax({
                        url: '/upload', // This should be the endpoint on your Node.js server
                        method: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            console.log('Image uploaded successfully');
                            // Handle success, e.g., display uploaded image
                        },
                        error: function (error) {
                            console.error('Error uploading image:', error);
                            // Handle error
                        }
                    });
                }
            }
        });
    </script>
</body>
</html>
